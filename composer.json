{
	"require": {
		"laravel/framework": "4.2.*",
		"mitch/laravel-doctrine": "~0.3",
		"heybigname/event-dispatcher": "~1.1",
		"beberlei/assert": "~2.0",
		"rhumsaa/uuid": "~2.7"
	},
	"require-dev": {
		"phpunit/phpunit": "4.0",
		"mockery/mockery": "~0.8"
	},
	"autoload": {
		"psr-4": {
			"Cribbb\\": "src"
		},
		"classmap": [
			"app/controllers",
			"app/database/migrations",
			"app/database/seeds",
			"tests/TestCase.php"
		]
	},
	"scripts": {
		"pre-update-cmd": [
			"php artisan clear-compiled"
		],
		"post-install-cmd": [
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan optimize"
		]
	},
	"config": {
		"preferred-install": "dist"
	},
	"minimum-stability": "dev"
}
