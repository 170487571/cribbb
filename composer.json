{
	"require": {
		"laravel/framework": "4.2.*",
		"mitch/laravel-doctrine": "0.*",
		"beberlei/assert": "~2.0"
	},
	"require-dev": {
		"phpunit/phpunit": "3.7.*",
		"mockery/mockery": "dev-master"
	},
	"autoload": {
		"psr-4": {
			"Cribbb\\": "src"
		},
		"classmap": [
			"app/controllers",
			"app/database/migrations",
			"app/database/seeds",
			"tests/TestCase.php"
		]
	},
	"scripts": {
		"pre-update-cmd": [
			"php artisan clear-compiled"
		],
		"post-install-cmd": [
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan optimize"
		]
	},
	"config": {
		"preferred-install": "dist"
	},
	"minimum-stability": "dev"
}
